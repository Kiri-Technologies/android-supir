<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_fragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Catat Pendapatan"
        android:textAppearance="@style/textViewTitle"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kamu bisa catat pendapatan mu hari ini disini"
        android:textAppearance="@style/textViewBody2"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn20"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="7dp"
        android:text="Rp. 20.000"
        android:textAlignment="center"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLabel2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn40"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="7dp"
        android:text="Rp. 40.000"
        android:textAlignment="center"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn20"
        app:layout_constraintTop_toBottomOf="@id/tvLabel2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn50"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="7dp"
        android:text="Rp. 50.000"
        android:textAlignment="center"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@+id/btn70"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn20" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn70"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="7dp"
        android:text="Rp. 70.000"
        android:textAlignment="center"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn50"
        app:layout_constraintTop_toBottomOf="@id/btn40" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn100"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="7dp"
        android:text="Rp. 100.000"
        android:textAlignment="center"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toStartOf="@id/btn150"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn50" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn150"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:paddingVertical="7dp"
        android:text="Rp. 150.000"
        android:textAlignment="center"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn100"
        app:layout_constraintTop_toBottomOf="@id/btn70" />

    <TextView
        android:id="@+id/tvEarnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textAppearance="@style/textViewBody1"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn100"
        tools:text="Rp. 100000" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/custom_line"
        app:layout_constraintTop_toBottomOf="@id/tvEarnings" />

    <com.kiri.ui.ButtonView
        android:id="@+id/btnSave"
        style="@style/ButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:text="Simpan" />

</androidx.constraintlayout.widget.ConstraintLayout>